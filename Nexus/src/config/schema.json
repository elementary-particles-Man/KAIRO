{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/nexus/message.schema.json",
  "title": "NexusMessage",
  "type": "object",
  "additionalProperties": false,
  "required": ["from", "to", "intent", "payload", "nexus", "trace"],
  "properties": {
    "from": {"type": "string", "minLength": 1},
    "to":   {"type": "string", "minLength": 1},
    "intent": {"type": "string", "enum": ["chat"]},
    "payload": {
      "type": "object",
      "additionalProperties": true,
      "required": ["text"],
      "properties": {
        "text": {"type": "string"},
        "meta": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "lang": {"type": "string"}
          }
        }
      }
    },
    "nexus": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "reply_timeout_sec": {"type": "integer", "minimum": 0},
        "max_roundtrip": {"type": "integer", "minimum": 0}
      }
    },
    "trace": {
      "type": "object",
      "additionalProperties": true,
      "required": ["id"],
      "properties": {
        "id": {"type": "string", "minLength": 1},
        "parent": {"type": ["string", "null"]}
      }
    }
  }
}

